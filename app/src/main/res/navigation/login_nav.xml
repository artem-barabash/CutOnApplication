<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/slashFragment">

    <fragment
        android:id="@+id/slashFragment"
        android:name="com.example.cutonapplication.presentation.ui.fragments_login.SlashFragment"
        android:label="fragment_slash"
        tools:layout="@layout/fragment_slash" >
        <action
            android:id="@+id/action_slashFragment_to_exitFragment"
            app:destination="@id/exitFragment" />
    </fragment>
    <fragment
        android:id="@+id/exitFragment"
        android:name="com.example.cutonapplication.presentation.ui.fragments_login.ExitFragment"
        android:label="fragment_exit"
        tools:layout="@layout/fragment_exit" />
</navigation>